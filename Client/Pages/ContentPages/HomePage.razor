@page "/home/dashboard"
@inject NavigationManager NavManager
@inject AllState allState
@implements IDisposable

<TableBanner />

@if (CurrentPageComponent != null)
{
    <DynamicComponent Type="CurrentPageComponent" />
}

@code {
    [CascadingParameter] public Task<AuthenticationState>? AuthenticationState { get; set; }

    private Type? CurrentPageComponent => allState.CurrentView switch
    {
        ViewType.GeneralDepartment => typeof(GeneralDepartmentPage),
        ViewType.Department => typeof(DepartmentPage),
        ViewType.Branch => typeof(BranchPage),
        ViewType.Country => typeof(CountryPage),
        ViewType.City => typeof(CityPage),
        ViewType.Town => typeof(TownPage),
        ViewType.User => typeof(UserPage),
        ViewType.Employee => typeof(EmployeePage),
        _ => null
    };

    protected async override Task OnInitializedAsync()
    {
        await CheckUserAuthentication();
        allState.Action += StateHasChanged;
    }

    private async Task CheckUserAuthentication()
    {
        if (AuthenticationState != null)
        {
            var user = (await AuthenticationState).User;
            bool isUserAuthenticated = user.Identity!.IsAuthenticated;
            if (!isUserAuthenticated)
            {
                NavManager.NavigateTo("/identity/account/login");
            }
        }
    }

    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}